<UserControl x:Class="MusicStoreCatalog.Pages.ProfilePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="20" MaxWidth="400">
            <!-- Заголовок -->
            <TextBlock Text=" Мой профиль" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Основная информация -->
            <Border Background="#f8f9fa" Padding="15" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Основная информация" FontWeight="Bold" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LoginText" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="FirstNameText" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Фамилия:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LastNameText" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Телефон:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="PhoneText" Margin="0,0,0,5"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Рабочая информация -->
            <Border Background="#f8f9fa" Padding="15" CornerRadius="5" Margin="0,15,0,0">
                <StackPanel>
                    <TextBlock Text="Рабочая информация" FontWeight="Bold" Margin="0,0,0,10"/>

                    <Grid x:Name="WorkInfoGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Должность:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RoleText" Margin="0,0,0,5"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Статистика продаж (только для консультантов) -->
            <Border x:Name="SalesStatsBorder"
                    Background="#e8f6f3" 
                    Padding="15" 
                    CornerRadius="5" 
                    Margin="0,15,0,0"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Статистика продаж" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"
                               Foreground="#16a085"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Всего продаж -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Всего продаж:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,10,5"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                            <TextBlock x:Name="TotalSalesText" 
                                       Text="0" 
                                       FontWeight="Bold"
                                       Foreground="#27ae60"
                                       Margin="0,0,5,5"/>
                            <TextBlock Text="шт." 
                                       Margin="0,0,0,5"/>
                        </StackPanel>

                        <!-- Рейтинг звезды -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Рейтинг:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,10,5"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" 
                                    Orientation="Horizontal"
                                    x:Name="RatingStarsPanel"
                                    Margin="0,0,0,5">
                            <!-- Звезды будут добавляться динамически -->
                        </StackPanel>

                        <!-- Место среди всех -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Место среди всех:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                   x:Name="RankAllText" 
                                   Text="-" 
                                   Margin="0,0,0,5"/>

                        <!-- Место по специализации -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Место по специализации:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                   x:Name="RankSpecializationText" 
                                   Text="-" 
                                   Margin="0,0,0,5"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" x:Name="ButtonsPanel">
                <Button Content="Редактировать" Padding="15,8" Background="#3498db" Foreground="White"
                        x:Name="EditButton" Click="EditButton_Click"/>
                <Button Content="Сменить пароль" Padding="15,8" Margin="10,0,0,0" 
                        Background="#2ecc71" Foreground="White" Click="ChangePasswordButton_Click"
                        x:Name="ChangePasswordButton"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>

</UserControl>