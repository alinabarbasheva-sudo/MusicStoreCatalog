<UserControl x:Class="MusicStoreCatalog.Pages.CatalogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicStoreCatalog.Pages"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="🎸 Каталог инструментов" FontSize="18" FontWeight="Bold"/>
            <Button x:Name="RefreshBtn" Content="🔄 Обновить" Click="RefreshBtn_Click"/>
        </StackPanel>

        <!-- Таблица -->
        <DataGrid Grid.Row="1" x:Name="InstrumentsGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Бренд" Binding="{Binding Brand}" Width="120"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding Model}" Width="120"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="100"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="80"/>
                <DataGridTextColumn Header="В наличии" Binding="{Binding StockQuantity}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>