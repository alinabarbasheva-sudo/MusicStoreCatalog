<UserControl x:Class="MusicStoreCatalog.Pages.CatalogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="550" Width="900">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="TitleText"
                   Grid.Row="0" 
                   Text="🎸 Каталог инструментов" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- Панель управления -->
        <Border Grid.Row="1" 
                Background="#f8f9fa" 
                Padding="10" 
                CornerRadius="5"
                Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="RefreshBtn" 
                        Content="🔄 Обновить каталог" 
                        Padding="10,6"
                        FontWeight="SemiBold"
                        Click="RefreshBtn_Click"/>
            </StackPanel>
        </Border>

        <!-- Панель поиска -->
        <Border Grid.Row="2" 
                Background="#f0f7ff" 
                Padding="10" 
                CornerRadius="5"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Поле поиска -->
                <TextBlock Grid.Column="0" 
                           Text="🔍 Поиск:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           FontWeight="SemiBold"/>

                <TextBox x:Name="SearchTextBox" 
                         Grid.Column="1" 
                         Padding="8" 
                         VerticalAlignment="Center"
                         TextChanged="SearchTextBox_TextChanged"
                         FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Кнопка сброса поиска -->
                <Button x:Name="ClearSearchBtn" 
                        Grid.Column="2" 
                        Content="❌ Очистить" 
                        Padding="10,6"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Click="ClearSearchBtn_Click"
                        ToolTip="Очистить поиск и показать все инструменты"/>

            </Grid>
        </Border>

        <!-- Таблица инструментов -->
        <DataGrid Grid.Row="3" 
                  x:Name="InstrumentsGrid" 
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  RowBackground="White"
                  AlternatingRowBackground="#f8f9fa"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Бренд" Binding="{Binding Brand}" Width="120"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding Model}" Width="120"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="100"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0} br}" Width="90"/>
                <DataGridTextColumn Header="В наличии" Binding="{Binding StockQuantity}" Width="80"/>

                <!-- Кнопка для продажи -->
                <DataGridTemplateColumn x:Name="SellColumn" 
                                        Header="Продажа" 
                                        Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="💰 Продать" 
                                    Padding="8,4"
                                    Tag="{Binding Id}"
                                    Click="SellButton_Click" 
                                    Background="#2ecc71"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Кнопка для заказа -->
                <DataGridTemplateColumn x:Name="OrderColumn" 
                                        Header="Заказ" 
                                        Width="100"
                                        Visibility="Visible">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="📦 Заказать" 
                                    Padding="8,4"
                                    Tag="{Binding Id}"
                                    Click="OrderButton_Click" 
                                    Background="#3498db"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Кнопка для удаления (только для администратора) -->
                <DataGridTemplateColumn x:Name="DeleteColumn" 
                                        Header="🗑️ Удалить" 
                                        Width="100"
                                        Visibility="Collapsed">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="🗑️ Удалить" 
                                    Padding="8,4"
                                    Tag="{Binding Id}"
                                    Click="DeleteButton_Click" 
                                    Background="#e74c3c"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    ToolTip="Удалить инструмент из каталога"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>