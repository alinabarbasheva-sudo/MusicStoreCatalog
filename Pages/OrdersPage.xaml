<UserControl x:Class="MusicStoreCatalog.Pages.OrdersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="600" Width="1000">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок с общей статистикой -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="15" CornerRadius="5" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📋 Управление заявками на заказ" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock x:Name="StatsText" 
                           Margin="20,0,0,0" 
                           Foreground="#ecf0f1"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основной контент с вкладками -->
        <TabControl Grid.Row="1" Background="White" BorderThickness="0">

            <!-- Вкладка 1: Заявки в ожидании -->
            <TabItem x:Name="PendingTab" Header="🟡 В ожидании (0)" 
                     FontSize="14" FontWeight="SemiBold" Padding="15,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления -->
                    <Border Grid.Row="0" Background="#f8f9fa" Padding="15" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Заявки, требующие вашего внимания:" 
                                       VerticalAlignment="Center" 
                                       FontWeight="SemiBold"/>
                            <Button x:Name="RefreshPendingBtn" 
                                    Content="🔄 Обновить" 
                                    Margin="20,0,0,0" 
                                    Padding="12,6"
                                    FontWeight="SemiBold"
                                    Background="#3498db"
                                    Foreground="White"
                                    Click="RefreshPendingBtn_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Таблица -->
                    <DataGrid Grid.Row="1" 
                              x:Name="PendingOrdersGrid" 
                              AutoGenerateColumns="False" 
                              SelectionMode="Single"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              RowBackground="White"
                              AlternatingRowBackground="#f8f9fa"
                              HeadersVisibility="Column"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Инструмент" Binding="{Binding DisplayName}" Width="180"/>
                            <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="70"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding EstimatedPrice, StringFormat=C}" Width="90"/>
                            <DataGridTextColumn Header="Дата заявки" 
                                                Binding="{Binding RequestDate, StringFormat=dd.MM.yyyy HH:mm}" 
                                                Width="130"/>
                            <DataGridTextColumn Header="Примечание" Binding="{Binding Notes}" Width="200"/>

                            <!-- Действия -->
                            <DataGridTemplateColumn Header="Действия" Width="190" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✅ Подтвердить" 
                                                    Padding="8,4" 
                                                    Margin="0,0,8,0"
                                                    Tag="{Binding Id}"
                                                    Click="ApproveButton_Click"
                                                    Background="#27ae60"
                                                    Foreground="White"
                                                    FontWeight="SemiBold"
                                                    Cursor="Hand"/>
                                            <Button Content="❌ Отклонить" 
                                                    Padding="8,4"
                                                    Tag="{Binding Id}"
                                                    Click="RejectButton_Click"
                                                    Background="#e74c3c"
                                                    Foreground="White"
                                                    FontWeight="SemiBold"
                                                    Cursor="Hand"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка 2: Обработанные заявки -->
            <TabItem x:Name="ProcessedTab" Header="✅ Обработанные (0)" 
                     FontSize="14" FontWeight="SemiBold" Padding="15,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления с фильтром -->
                    <Border Grid.Row="0" Background="#f8f9fa" Padding="15" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Фильтр:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"
                                       FontWeight="SemiBold"/>
                            <ComboBox x:Name="ProcessedFilterCombo" 
                                      Width="140" 
                                      SelectedIndex="0"
                                      Padding="8"
                                      FontSize="13">
                                <ComboBoxItem Content="Все заявки"/>
                                <ComboBoxItem Content="Только подтвержденные"/>
                                <ComboBoxItem Content="Только отклоненные"/>
                            </ComboBox>

                            <Button x:Name="RefreshProcessedBtn" 
                                    Content="🔄 Обновить" 
                                    Margin="20,0,0,0" 
                                    Padding="12,6"
                                    FontWeight="SemiBold"
                                    Background="#3498db"
                                    Foreground="White"
                                    Click="RefreshProcessedBtn_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Таблица обработанных заявок -->
                    <DataGrid Grid.Row="1" 
                              x:Name="ProcessedOrdersGrid" 
                              AutoGenerateColumns="False" 
                              SelectionMode="Single"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              RowBackground="White"
                              AlternatingRowBackground="#f8f9fa"
                              HeadersVisibility="Column"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Инструмент" Binding="{Binding DisplayName}" Width="180"/>
                            <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="70"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding EstimatedPrice, StringFormat=C}" Width="90"/>
                            <DataGridTextColumn Header="Дата заявки" 
                                                Binding="{Binding RequestDate, StringFormat=dd.MM.yyyy}" 
                                                Width="100"/>
                            <DataGridTextColumn Header="Дата обработки" 
                                                Binding="{Binding ApprovalDate, StringFormat=dd.MM.yyyy HH:mm}" 
                                                Width="130"/>

                            <!-- Статус с цветовой индикацией -->
                            <DataGridTemplateColumn Header="Статус" Width="120" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Padding="6,3" CornerRadius="4" Margin="2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Approved">
                                                            <Setter Property="Background" Value="#d5f4e6"/>
                                                            <Setter Property="BorderBrush" Value="#27ae60"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                            <Setter Property="Background" Value="#fadbd8"/>
                                                            <Setter Property="BorderBrush" Value="#e74c3c"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Background" Value="#fef9e7"/>
                                                    <Setter Property="BorderBrush" Value="#f4d03f"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" 
                                                       HorizontalAlignment="Center"
                                                       FontWeight="Bold"
                                                       FontSize="12">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Approved">
                                                                <Setter Property="Text" Value="✅ Подтверждено"/>
                                                                <Setter Property="Foreground" Value="#186a3b"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                <Setter Property="Text" Value="❌ Отклонено"/>
                                                                <Setter Property="Foreground" Value="#78281f"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                        <Setter Property="Foreground" Value="#7d6608"/>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>