<Window x:Class="MusicStoreCatalog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicStoreCatalog"
        mc:Ignorable="d"
        Title="Music Store Catalog" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="🎵 Music Store Catalog" 
                          Foreground="White" 
                          FontSize="18" 
                          FontWeight="Bold"/>

                <TextBlock Grid.Column="1" 
                          x:Name="WelcomeText" 
                          Foreground="White" 
                          FontSize="14" 
                          Margin="20,0,0,0" 
                          VerticalAlignment="Center"/>

                <!-- Кнопка выхода -->
                <Button Grid.Column="2"
        x:Name="LogoutButton"
        Content="🚪 Выйти"
        Background="Transparent"
        Foreground="White"
        BorderThickness="0"
        FontSize="13"
        Padding="10,5"
        Cursor="Hand"
                    ToolTip="Выйти из аккаунта">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#34495e"/>
                                    <Setter Property="Foreground" Value="#ecf0f1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Меню -->
            <Border Grid.Column="0" Background="#34495e" Padding="10">
                <StackPanel>
                    <TextBlock Text="НАВИГАЦИЯ" 
                               Foreground="#ecf0f1" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>

                    <Button x:Name="CatalogBtn" 
                            Content="📋 Каталог" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderThickness="0" 
                            HorizontalAlignment="Left" 
                            Padding="5"
                            Margin="0,0,0,5"/>

                    <Button x:Name="ProfileBtn" 
                            Content="👤 Профиль" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderThickness="0" 
                            HorizontalAlignment="Left" 
                            Padding="5"
                            Margin="0,0,0,5"/>

                    <!-- Админ-панель -->
                    <TextBlock x:Name="AdminHeader"
                               Text="АДМИНИСТРИРОВАНИЕ" 
                               Foreground="#95a5a6" 
                               FontWeight="Bold" 
                               Margin="0,20,0,10" 
                               Visibility="Collapsed"/>

                    <Button x:Name="AdminUsersBtn" 
                            Content="👥 Пользователи" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderThickness="0" 
                            HorizontalAlignment="Left" 
                            Padding="5"
                            Margin="0,0,0,5"
                            Visibility="Collapsed"/>

                    <Button x:Name="AdminAddInstrumentBtn" 
                            Content="➕ Добавить инструмент" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderThickness="0" 
                            HorizontalAlignment="Left" 
                            Padding="5"
                            Margin="0,0,0,5"
                            Visibility="Collapsed"/>

                    <Button x:Name="AdminReportsBtn" 
                            Content="📊 Отчеты" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderThickness="0" 
                            HorizontalAlignment="Left" 
                            Padding="5"
                            Margin="0,0,0,5"
                            Visibility="Collapsed"/>

                    <Button x:Name="AdminOrdersBtn" 
                            Content="📋 Заявки на заказ" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderThickness="0" 
                            HorizontalAlignment="Left" 
                            Padding="5"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Область контента -->
            <Frame x:Name="MainFrame" 
                   Grid.Column="1" 
                   NavigationUIVisibility="Hidden" 
                   Padding="20"/>
        </Grid>
    </Grid>
</Window>