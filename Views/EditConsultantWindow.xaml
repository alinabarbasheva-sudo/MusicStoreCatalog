<Window x:Class="MusicStoreCatalog.Views.EditConsultantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование консультанта" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="✏️ Редактирование консультанта" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Форма редактирования -->
        <StackPanel Grid.Row="1">
            <!-- Логин (только чтение) -->
            <TextBlock Text="Логин" 
                       FontSize="13" 
                       FontWeight="Medium"
                       Foreground="#4a5568"
                       Margin="0,0,0,4"/>

            <TextBox x:Name="LoginBox" 
                     Height="32" 
                     FontSize="13"
                     Padding="8"
                     BorderBrush="#cbd5e0"
                     BorderThickness="1"
                     Background="#f8f9fa"
                     IsReadOnly="True"
                     Margin="0,0,0,12"/>

            <!-- Имя -->
            <TextBlock Text="Имя *" 
                       FontSize="13" 
                       FontWeight="Medium"
                       Foreground="#4a5568"
                       Margin="0,0,0,4"/>

            <TextBox x:Name="FirstNameBox" 
                     Height="32" 
                     FontSize="13"
                     Padding="8"
                     BorderBrush="#cbd5e0"
                     BorderThickness="1"
                     Margin="0,0,0,12"/>

            <!-- Фамилия -->
            <TextBlock Text="Фамилия *" 
                       FontSize="13" 
                       FontWeight="Medium"
                       Foreground="#4a5568"
                       Margin="0,0,0,4"/>

            <TextBox x:Name="LastNameBox" 
                     Height="32" 
                     FontSize="13"
                     Padding="8"
                     BorderBrush="#cbd5e0"
                     BorderThickness="1"
                     Margin="0,0,0,12"/>

            <!-- Телефон -->
            <TextBlock Text="Телефон" 
                       FontSize="13" 
                       FontWeight="Medium"
                       Foreground="#4a5568"
                       Margin="0,0,0,4"/>

            <TextBox x:Name="PhoneBox" 
                     Height="32" 
                     FontSize="13"
                     Padding="8"
                     BorderBrush="#cbd5e0"
                     BorderThickness="1"
                     Margin="0,0,0,12"
                     Text="+375 ("
                     MaxLength="19"/>

            <!-- Специализация -->
            <TextBlock Text="Специализация *" 
                       FontSize="13" 
                       FontWeight="Medium"
                       Foreground="#4a5568"
                       Margin="0,0,0,4"/>

            <ComboBox x:Name="SpecializationCombo" 
                      Height="32" 
                      Padding="8"
                      FontSize="13"
                      SelectedIndex="0">
                <ComboBoxItem Content="Гитары"/>
                <ComboBoxItem Content="Клавишные"/>
                <ComboBoxItem Content="Ударные"/>
                <ComboBoxItem Content="Духовые"/>
                <ComboBoxItem Content="Струнные"/>
            </ComboBox>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Width="80" 
                    Margin="0,0,10,0" 
                    Click="CancelButton_Click"/>
            <Button Content="Сохранить" 
                    Width="80" 
                    Background="#2ecc71"
                    Foreground="White"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>