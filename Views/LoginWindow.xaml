<Window x:Class="MusicStoreCatalog.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" 
        Height="300" 
        Width="280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <StackPanel VerticalAlignment="Center" Margin="22,0,22,0" Height="264">
        <!-- Заголовок -->
        <TextBlock Text="🎵" 
                   FontSize="24" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <TextBlock Text="Music Store" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Логин -->
        <TextBlock Text="Логин" 
                   FontSize="12" 
                   Margin="0,0,0,3"/>

        <TextBox x:Name="UsernameBox" 
                 Height="30" 
                 FontSize="13"
                 Padding="6"
                 BorderBrush="#ccc"
                 BorderThickness="1"
                 Margin="0,0,0,12"/>

        <!-- Пароль -->
        <TextBlock Text="Пароль" 
                   FontSize="12" 
                   Margin="0,0,0,3"/>

        <PasswordBox x:Name="PasswordBox" 
                     Height="30" 
                     FontSize="13"
                     Padding="6"
                     BorderBrush="#ccc"
                     BorderThickness="1"
                     Margin="0,0,0,20"/>

        <!-- Кнопка -->
        <Button x:Name="LoginButton"
                Content="Войти" 
                Height="32"
                FontSize="13"
                Background="#3498db"
                Foreground="White"
                BorderThickness="0"
                Click="LoginButton_Click"/>
    </StackPanel>
</Window>