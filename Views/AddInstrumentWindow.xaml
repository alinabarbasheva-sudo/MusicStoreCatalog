<Window x:Class="MusicStoreCatalog.Views.AddInstrumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить новый инструмент" 
        Height="380" 
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="?? Добавить новый инструмент" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Форма (упрощенная) -->
        <StackPanel Grid.Row="1">
            <!-- Бренд -->
            <TextBlock Text="Бренд *" Margin="0,0,0,5"/>
            <TextBox x:Name="BrandBox" Margin="0,0,0,10"/>

            <!-- Модель -->
            <TextBlock Text="Модель *" Margin="0,0,0,5"/>
            <TextBox x:Name="ModelBox" Margin="0,0,0,10"/>

            <!-- Категория -->
            <TextBlock Text="Категория *" Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoryCombo" Margin="0,0,0,10">
                <ComboBoxItem Content="Гитара"/>
                <ComboBoxItem Content="Клавишные"/>
                <ComboBoxItem Content="Ударные"/>
                <ComboBoxItem Content="Духовые"/>
                <ComboBoxItem Content="Струнные"/>
                <ComboBoxItem Content="Аксессуары"/>
            </ComboBox>
            <!-- Цена -->
            <TextBlock Text="Цена (br) *" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceBox" 
         Margin="0,0,0,10"
         PreviewTextInput="DecimalValidationTextBox"/>
            <!-- Количество -->
            <TextBlock Text="Количество на складе *" Margin="0,0,0,5"/>
            <TextBox x:Name="QuantityBox" 
         Text="1" 
         Margin="0,0,0,15"
         PreviewTextInput="NumberValidationTextBox"/>
            <!-- В форму добавления инструмента добавьте поле описания -->
            <TextBlock Text="Описание" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionBox" 
         Height="60" 
         TextWrapping="Wrap" 
         VerticalScrollBarVisibility="Auto"
         Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Width="80" 
                    Margin="0,0,10,0" 
                    Click="CancelBtn_Click"/>
            <Button Content="Добавить" 
                    Width="80" 
                    Click="SaveBtn_Click"
                    Background="#2ecc71"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>