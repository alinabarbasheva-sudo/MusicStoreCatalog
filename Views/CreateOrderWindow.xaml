<Window x:Class="MusicStoreCatalog.Views.CreateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание заявки на заказ" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="📦 Новая заявка на заказ" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Форма -->
        <StackPanel Grid.Row="1">
            <!-- Информация об инструменте -->
            <Border Background="#f0f8ff" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Инструмент:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="InstrumentInfoText" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Количество -->
            <TextBlock Text="Количество для заказа:" Margin="0,10,0,5"/>
            <TextBox x:Name="QuantityBox" Text="1" Margin="0,0,0,10"
                     PreviewTextInput="NumberValidationTextBox"/>

            <!-- Примерная цена -->
            <TextBlock Text="Примерная цена за единицу:" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceBox" Margin="0,0,0,10"
                     PreviewTextInput="DecimalValidationTextBox"/>

            <!-- Примечания -->
            <TextBlock Text="Примечания (необязательно):" Margin="0,0,0,5"/>
            <TextBox x:Name="NotesBox" Height="60" TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Width="80" Margin="0,0,10,0" 
                    Click="CancelBtn_Click"/>
            <Button Content="Создать заявку" Width="120" 
                    Click="CreateBtn_Click" Background="#2ecc71" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>