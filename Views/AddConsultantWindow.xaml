<Window x:Class="MusicStoreCatalog.Views.AddConsultantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить консультанта" Height="400" Width="350"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="➕ Добавить нового консультанта" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Форма -->
        <StackPanel Grid.Row="1" Grid.IsSharedSizeScope="True">
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Labels"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин:" Margin="0,0,10,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="LoginBox" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Пароль:" Margin="0,0,10,5"/>
                <PasswordBox Grid.Row="1" Grid.Column="1" x:Name="PasswordBox" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Имя:" Margin="0,0,10,5"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="FirstNameBox" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Фамилия:" Margin="0,0,10,5"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="LastNameBox" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Телефон:" Margin="0,0,10,5"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="PhoneBox" Margin="0,0,0,5"
                         Text="+375 (" MaxLength="19"
                         PreviewTextInput="PhoneBox_PreviewTextInput"
                         TextChanged="PhoneBox_TextChanged"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Специализация:" Margin="0,0,10,5"/>
                <ComboBox Grid.Row="5" Grid.Column="1" x:Name="SpecializationCombo" Margin="0,0,0,5">
                    <ComboBoxItem Content="Гитары"/>
                    <ComboBoxItem Content="Клавишные"/>
                    <ComboBoxItem Content="Ударные"/>
                    <ComboBoxItem Content="Духовые"/>
                </ComboBox>
            </Grid>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Width="80" Margin="0,0,10,0" Click="CancelBtn_Click"/>
            <Button Content="Сохранить" Width="80" Click="SaveBtn_Click"/>
        </StackPanel>
    </Grid>

</Window>