<Window x:Class="MusicStoreCatalog.Views.UserProfileViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр профиля" 
        Height="400" 
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock Text="👤 Профиль пользователя" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"/>

            <!-- Информация -->
            <Border Background="#f8f9fa" Padding="15" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин:" 
                              FontWeight="SemiBold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LoginText" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" 
                              FontWeight="SemiBold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="FirstNameText" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Фамилия:" 
                              FontWeight="SemiBold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LastNameText" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Телефон:" 
                              FontWeight="SemiBold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="PhoneText" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Должность:" 
                              FontWeight="SemiBold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="RoleText" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Специализация:" 
                              FontWeight="SemiBold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="SpecializationText" Margin="0,0,0,5"/>
                </Grid>
            </Border>

            <!-- Кнопка закрытия -->
            <Button Content="Закрыть" 
                    Margin="0,20,0,0" 
                    Padding="10,5"
                    HorizontalAlignment="Right"
                    Click="CloseBtn_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>