<Window x:Class="MusicStoreCatalog.Views.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование профиля" 
        Height="400" 
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="✏️ Редактирование профиля" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Форма редактирования -->
        <StackPanel Grid.Row="1">
            <!-- Имя -->
            <TextBlock Text="Имя *" 
                       FontSize="12" 
                       FontWeight="Medium"
                       Foreground="#4a5568"
                       Margin="0,0,0,4"/>

            <TextBox x:Name="FirstNameBox" 
                     Height="32" 
                     FontSize="13"
                     Padding="8"
                     BorderBrush="#cbd5e0"
                     BorderThickness="1"
                     Margin="0,0,0,12"/>

            <!-- Фамилия -->
            <TextBlock Text="Фамилия *" 
                       FontSize="12" 
                       FontWeight="Medium"
                       Foreground="#4a5568"
                       Margin="0,0,0,4"/>

            <TextBox x:Name="LastNameBox" 
                     Height="32" 
                     FontSize="13"
                     Padding="8"
                     BorderBrush="#cbd5e0"
                     BorderThickness="1"
                     Margin="0,0,0,12"/>

            <!-- Телефон -->
            <TextBlock Text="Телефон" 
                       FontSize="12" 
                       FontWeight="Medium"
                       Foreground="#4a5568"
                       Margin="0,0,0,4"/>

            <TextBox x:Name="PhoneBox" 
                     Height="32" 
                     FontSize="13"
                     Padding="8"
                     BorderBrush="#cbd5e0"
                     BorderThickness="1"
                     Margin="0,0,0,20"
                     Text="+375 ("
                     MaxLength="19"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Width="80" 
                    Margin="0,0,10,0" 
                    Click="CancelButton_Click"/>
            <Button Content="Сохранить" 
                    Width="80" 
                    Background="#2ecc71"
                    Foreground="White"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>